@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');

// variables
$bleue : dodgerblue;

*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body{
    font-family: 'Poppins', sans-serif;
    font-style: normal;
}

button {
    border: none;
    cursor: pointer;
    background-color: inherit;
}
li{
    list-style: none;
}
i{
    cursor: pointer;
}
a{
    text-decoration: none;
    color: #333;
}

// header style
.header{
    box-shadow: 0 4px 3px -3px rgba(145, 145, 145, 0.295);
    .content{
        padding: 15px;
        display: flex;
        justify-content: space-between;

        .logo  {
            font-weight: 900;
            font-size: 30px;
            letter-spacing: -2px;
            color: #7B61FF;
            text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
            text-transform: uppercase;
        }
       
            ul{
                display: flex;
                .search{
                    display: flex;
                    align-items: center;
                    a{
                        margin-left: 15px;
                        text-decoration: underline;
                    }
                }
                .recherche{
                    background: rgba(66, 133, 244, 0.22);
                    width: 300px;
                    height: 40px;
                    display: flex;
                    border-radius: 6px;
                    input{
                        width: 100%;
                        background: none;
                        border: none;
                        border-radius: 6px;
                        padding-left: 15px;
                        outline: none;
                    }
                    .icon{
                        width: 50px;
                        display: flex;
                        justify-content: center;
                        align-items: center;
                    }
                }
            }
            .cart-log{
                button{
                    width: 30px;
                    height: 30px;
                    margin-top: 8px;
                    margin-left: 4px;
                    border-radius: 50px;
                    color: #fff;
                    background-color: #7B61FF;
                    filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));
                }
                a{
                    color: #fff;
                }
            }
            .mobile{
                display: none;
            }
    }

    .link{
        padding: 15px;
        background-color: #f5f5f5f5;
        display: flex;
        justify-content: center;
        
        li{
            margin-left: 20px;
        }
        .cart-log-mobile{
            button{
                width: 30px;
                height: 30px;
                border-radius: 50px;
                color: #fff;
                background-color: #7B61FF;
                filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));
            }
        }
    }

}


    //responsive du header
    @media screen  and (min-width: 900px){
        .link{
            display: block;
        }
        .cart-log-mobile{
            display: none;
        }
    }
    @media screen and (max-width: 900px){
        .header .content .mobile{
            display: block;
            margin-top: 5px;
        }
        .header .content ul, .cart-log{
            display: none;
        }
        .content .icon-mobile i{
            margin-top: 8px;
            margin-left: 5px;
        }
        .header .link{
            display: none;
            padding: 0;
            padding: 15px 0;
            transition: all .5s ease;
        }

        .header .link li{
            padding: 10px 0;
            margin-bottom: 10px;
        }
    }
    .toggle{
        display: block;
    }


// footer style

.footer{
    background-color: #333;
    color: #fff;
    padding: 30px 20px;
    .newsletter{
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 10px;
        input{
            width: 300px;
            height: 45px;
            border: 1px solid #aaa;
            border-radius: 4px;
            padding-left: 15px;
            outline: none;
            margin-left: 15px;
        } 
        button{
            display: block !important;
            width: 100px;
            height: 45px;
            border-radius: 4px;
            color: #fff;
            font-size: 15px;
            background-color: dodgerblue;
            margin-left: 15px;
        }
    }
    .footer-content{
        padding: 15px;
        display: flex;
        justify-content: space-around;
        h2{
            color: dodgerblue;
        }
        .logo{
            display: block !important;
            width: 300px;
            text-decoration: none;
        }
        .info i{
            margin-right: 15px;
            
        }
        .content{
            .social{
                display: flex;
                li{
                    width: 30px;
                    height: 30px;
                    border-radius: 30px;
                    color: #333;
                    background-color: #fff;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    cursor: pointer;
                    transition: all .5s ease;
                    
                }
                .sc{
                    margin-left: 15px;
                }
                .fb:hover{
                    color: #fff;
                    background-color: $bleue;
                }
                .insta:hover{
                    color: bisque;
                    background-color: #333;
                }
                .twit:hover{
                    color: #fff;
                    background-color: $bleue;
                }
                .you:hover{
                    color: #fff;
                    background-color: rgb(214, 20, 20);
                }
                
            }
            li{
                margin-top: 15px;
            }
        }
    }
    hr{
        color: #333;
    }
    .footer-copyright{
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 10px;
        color: #aaa;
    }
}


// style slide 
.splide {
    width: 100%;
    height: 100vh;
    position: relative;
    display: inline-block;
    img{
        width: 100%;
        height: 100%;
    }
    .text{
        z-index: 1;
        position: absolute;
        text-align: left;
        margin: 0 auto;
        left: 0;
        right: 0;
        top: 30%;
        color: white;
        width: 70%;
        h2{
            font-size: 57px;
            width: 50%;
        }
        .btn{
            width: 320px;
            height: 45px;
            border-radius: 8px;
            font-size: 22px;
            font-weight: 600;
            color: #fff;
            border: 4px solid dodgerblue;
            display: block !important;
            transition: all .6s ease;
        }
        .btn:hover{
            background-color: chocolate;
            border: none;
        }
    }
    
}


button{
    display: none !important;
}

@media screen and (max-width: 900px){
    .footer{
        .footer-content{
            flex-wrap: wrap;
            justify-content: left;
            
            .logo{
                margin-top: 8px;
                padding-bottom: 20px;
                border-bottom: 1px dotted #aaa;
            }
        }
        hr{
            display: none;
        }

        
    }
}

@media screen and (max-width: 500px){
    .footer{
        .newsletter{
            display: inline-block;
            width: 100%;
            input, button{
                width: 100%;
                margin-top: 8px;
                margin-left: 0;
            }
        }
    }
}

@media screen and (max-width: 1045px) {
    .slide{
        .splide{
          .text{
              display: flex;
              justify-content: center;
              flex-direction: column;
            text-align: center;
            top: 30%;
            width: 100% !important;
            background-color: #7B61FF;
          }
        }
    }
}